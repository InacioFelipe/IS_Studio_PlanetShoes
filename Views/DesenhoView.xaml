<Page x:Class="IS_Studio_PlanetShoes.Views.DesenhoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      mc:Ignorable="d" 
      Title="DesenhoView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Inicio de Aferir o comprimento de um conjunto de curvas -->
        <StackPanel Grid.Column="0" Grid.Row="0"
                    VerticalAlignment="Center"
                    >
            <TextBlock Text="Measure length of the selected curve:"
                       FontSize="12" FontWeight="Bold"
                       >
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,5,0,0"
                    >
            <Button Grid.Column="0" Grid.Row="1"
                        x:Name="btnGetCurveLength"
                        ToolTip="Gets the length property of the selected curves"
                        Width="25" Height="25"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="btnGetCurveLength_Click"
                        >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/ContaGotasPropriedades.png"
                            Width="20" Height="20"/>
            </Button>
            <TextBlock Grid.Column="1" Grid.Row="1"
                           Text="Lenght:"
                           Margin="0,5,5,0"
                           />
            <TextBox Grid.Column="2" Grid.Row="1"
                         Margin="0,0,5,0"
                         Width="80"
                         x:Name="txtCurveLength"
                         Text="0.00"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         />
            <TextBlock Grid.Column="1" Grid.Row="1"
               Text="mm"
               Margin="0,5,5,0"
               />
        </StackPanel>
        <!-- Fim -->
        
        <StackPanel Grid.Column="0" Grid.Row="2">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>
        
        <!-- Navalhas Uniao -->
        <StackPanel Grid.Column="0" Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="0,5,0,0"
            >
            <Button Grid.Column="0" Grid.Row="2"
                x:Name="btnCreateQuoteForNavalhaUniao"
                ToolTip="Create Quote For Navalha União"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnCreateQuoteForNavalhaUniao_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/ContaGotasPropriedades.png"
                    Width="20" Height="20"/>
            </Button>

        </StackPanel>
        <!-- Fim -->
        
        <StackPanel Grid.Column="0" Grid.Row="4">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>

        <!-- Place Marks by clicking -->
        <StackPanel Grid.Column="0" Grid.Row="5"
                    VerticalAlignment="Center"
                    Margin="0,5,0,0"
                    >
            <TextBlock Text="Place marks in document: "
               FontSize="12" FontWeight="Bold"
               >
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="6"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="0,5,0,0"
            >
            <Button
                x:Name="btnCreatePinoMola"
                ToolTip="Place Pino-Mola by Clicking"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnCreatePinoMola_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/Pino-Mola.png"
                    Width="20" Height="20"/>
            </Button>
            <Button
                x:Name="btnCreateVazador1mm"
                ToolTip="Place Vazador 1mm by Clicking"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnCreateVazador1mm_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/Vazador1.png"
                    Width="20" Height="20"
                 />
            </Button>
            <Button
                x:Name="btnCreateVazador15mm"
                ToolTip="Place Vazador 1,5mm by Clicking"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnCreateVazador15mm_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/Vazador1,5.png"
                    Width="20" Height="20"
                />
            </Button>
            <Button
                x:Name="btnCreateVazador2mm"
                ToolTip="Place Vazador 2mm by Clicking"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnCreateVazador2mm_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/Vazador2.png"
                    Width="20" Height="20"
                 />
            </Button>
            <Button
                x:Name="btnCreateBoundaryMarks"
                ToolTip="Create Boundary Marks by Clicking"
                Width="25" Height="25"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Click="btnCreateBoundaryMarks_Click"
                >
                <Image Source="/IS_Studio_PlanetShoes;component/Resources/Reticence.png"
                    Width="20" Height="20"
                 />
            </Button>

        </StackPanel>
        <!-- Fim -->

        <StackPanel Grid.Column="0" Grid.Row="7">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>

        <!-- Organaze Shapes -->
        <StackPanel Grid.Column="0" Grid.Row="8"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Margin="0,10,0,0"
            >
            <TextBlock Text="Arrange shapes on layer by direction:"
               FontSize="12" FontWeight="Bold"
               >
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="9"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="0,2,0,0"
            >
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0"
                    x:Name="btnOrderByDownTop"
                    ToolTip="Arrange select shapes by down-top"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnOrderByDownTop_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/DownTop.png"
                         Width="20" Height="20"
                        />
                </Button>
                <Button Grid.Column="1" Grid.Row="0"
                    x:Name="btnOrderByLeftRight"
                    ToolTip="Arrange select shapes by left-right"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnOrderByLeftRight_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/LeftRight.png"
                         Width="20" Height="20"
                        />
                </Button>
                <Button Grid.Column="2" Grid.Row="0"
                    x:Name="btnOrderByTopDown"
                    ToolTip="Arrange select shapes by top-down"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnOrderByTopDown_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/TopDown.png"
                         Width="20" Height="20"
                        />
                </Button>
                <Button Grid.Column="3" Grid.Row="0"
                    x:Name="btnOrderByRightLeft"
                    ToolTip="Arrange select shapes by right-left"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnOrderByRightLeft_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/RightLeft.png"
                         Width="20" Height="20"
                        />
                </Button>
            </Grid>
        </StackPanel>
        <!-- Fim -->

        <StackPanel Grid.Column="0" Grid.Row="10">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>
        
        <!-- Create Shapes -->
        <StackPanel Grid.Column="0" Grid.Row="11"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,0"
                    >
            <TextBlock Text="Create elements with characteristics:"
                       FontSize="12" FontWeight="Bold"
                       >
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="12"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,2,0,0"
                    >
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0"
                        x:Name="btnFrameAroundSelection"
                        ToolTip="Make a frame with a caption above the selection:"
                        Width="25" Height="25"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="btnFrameAroundSelection_Click"
            >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/TransformSize.png"
                     Width="20" Height="20"
                    />
                </Button>
                
                <Button Grid.Column="2" Grid.Row="0"
                        x:Name="btn2"
                        ToolTip="Make other thing ..."
                        Width="25" Height="25"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
            >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/Reticence.png"
                            Width="20" Height="20"
                    />
                </Button>
                
                <Button Grid.Column="3" Grid.Row="0"
                        x:Name="btn3"
                        ToolTip="Make other thing ..."
                        Width="25" Height="25"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/Reticence.png"
                            Width="20" Height="20"
                    />
                </Button>
            </Grid>
        </StackPanel>
        <!-- Fim -->

        <StackPanel Grid.Column="0" Grid.Row="13">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>
        
        <!-- Create Contour offset -->
        <StackPanel Grid.Column="0" Grid.Row="14"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Margin="0,10,0,0"
            >
                <TextBlock Text="Create frames arround the selection:"
                    FontSize="12" FontWeight="Bold"
                    >
                </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="15"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="0,2,0,0"
            >
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                    Text="Number:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="0" Grid.Row="1"
                     Margin="0,2,15,5"
                     Width="50"
                     x:Name="txtNumberOffset"
                     Text="1"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" GotFocus="txtNumberOffset_GotFocus" LostFocus="txtNumberOffset_LostFocus"
                 />

                <TextBlock Grid.Column="1" Grid.Row="0"
                    Text="Distance:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="1" Grid.Row="1"
                     Margin="0,2,15,5"
                     Width="50"
                     x:Name="txtDistanceOffset"
                     Text="5"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" GotFocus="txtDistanceOffset_GotFocus" LostFocus="txtDistanceOffset_LostFocus"
                 />

                <Button Grid.Column="4" Grid.Row="0"
                    Grid.RowSpan="2"
                    x:Name="btnCreateOffset"
                    ToolTip="Create offset arround the selection"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnCreateOffset_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/MakeFrame.png"
                        Width="20" Height="20"
                    />
                </Button>

            </Grid>
        </StackPanel>
        <!-- Fim -->

        <StackPanel Grid.Column="0" Grid.Row="16">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>
        
        <!-- Create Silk Screens -->
        <StackPanel Grid.Column="0" Grid.Row="17"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Margin="0,10,0,0"
            >
            <TextBlock Text="Create Silk Screens with parameters:"
               FontSize="12" FontWeight="Bold"
               >
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="18"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="0,2,0,0"
            >
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                    Text="Width:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="0" Grid.Row="1"
                     Margin="0,2,5,5"
                     Width="40"
                     x:Name="txtFrameSizeWidth"
                     Text="900"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GotFocus="txtPrefix_GotFocus" LostFocus="txtPrefix_LostFocus"
                 />
                
                <TextBlock Grid.Column="1" Grid.Row="0"
                    Text="Height:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="1" Grid.Row="1"
                     Margin="0,2,5,5"
                     Width="40"
                     x:Name="txtFrameSizeHeight"
                     Text="700"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GotFocus="txtPrefix_GotFocus" LostFocus="txtPrefix_LostFocus"
                 />

                <TextBlock Grid.Column="2" Grid.Row="0"
                    Text="Border:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="2" Grid.Row="1"
                     Margin="0,2,5,5"
                     Width="40"
                     x:Name="txtFrameBorder"
                     Text="38"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     GotFocus="txtPrefix_GotFocus" LostFocus="txtPrefix_LostFocus"
                 />

                <TextBlock Grid.Column="3" Grid.Row="0"
                    Margin="0,0,10,0"
                    Text="Print height:"
                    FontSize="12"
                    HorizontalAlignment="Left"
                 >
                </TextBlock>
                <TextBox Grid.Column="3" Grid.Row="1"
                     Margin="0,2,5,5"
                     Width="50"
                     x:Name="txtPrintHeight"
                     Text="200"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     GotFocus="txtPrefix_GotFocus" LostFocus="txtPrefix_LostFocus"
                 />

                <Button Grid.Column="4" Grid.Row="0"
                    Grid.RowSpan="2"
                    x:Name="btnCreateFrameForSilkScreen"
                    ToolTip="Create a frame for silk screen"
                    Width="25" Height="25"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="btnCreateFrameForSilkScreen_Click"
                    >
                    <Image Source="/IS_Studio_PlanetShoes;component/Resources/MakeFrame.png"
                        Width="20" Height="20"
                    />
                </Button>
                
            </Grid>
        </StackPanel>
        <!-- Fim -->

        <StackPanel Grid.Column="0" Grid.Row="19">
            <Line X1="0" Y1="0" X2="243" Y2="0" Stroke="LightGray"  StrokeThickness="1"/>
        </StackPanel>

        <!-- Rename Shapes -->
        <StackPanel Grid.Column="0" Grid.Row="20"
            VerticalAlignment="Center"
            Margin="0,10,0,0"
            >
            <TextBlock Text="Name the shapes with the parameters:"
               FontSize="12" FontWeight="Bold"
               >
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="21"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="0,2,0,0"
            >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Inicio Linha 1 GRID OPTIONS -->
                <StackPanel Grid.Column="0" Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,2,0,0"
                    >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Inicio Coluna 1 PREFIX / NAME / SUFIX -->
                        <StackPanel Grid.Column="0" Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0"
                                    Text="Operation:"
                                    FontSize="12" FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                 >
                                </TextBlock>
                                <TextBox Grid.Column="0" Grid.Row="1"
                                     Margin="0,2,5,5"
                                     Width="120"
                                     x:Name="txtPrefix"
                                     Text="Operation"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" GotFocus="txtPrefix_GotFocus" LostFocus="txtPrefix_LostFocus"
                                 />

                                <TextBlock Grid.Column="0" Grid.Row="2"
                                    Text="Material:"
                                    FontSize="12" FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                 >
                                </TextBlock>
                                <TextBox Grid.Column="0" Grid.Row="3"
                                     Margin="0,2,5,5"
                                     Width="120"
                                     x:Name="txtName"
                                     Text="Material"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" GotFocus="txtName_GotFocus" LostFocus="txtName_LostFocus"
                                 />

                                <TextBlock Grid.Column="0" Grid.Row="4"
                                    Text="Name:"
                                    FontSize="12" FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                 >
                                </TextBlock>
                                <TextBox Grid.Column="0" Grid.Row="5"
                                     Margin="0,2,5,0"
                                     Width="120"
                                     x:Name="txtSuffix"
                                     Text="Name"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" GotFocus="txtSuffix_GotFocus" LostFocus="txtSuffix_LostFocus"
                                 />
                            </Grid>
                        </StackPanel>
                        <!-- Fim Coluna 1 -->

                        <StackPanel Grid.Column="1" Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            >
                        </StackPanel>

                        <!-- Inicio Coluna 2 SEM ENUM / ID OBJ / ENUM SEQ -->
                        <StackPanel Grid.Column="2" Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <RadioButton
                                    x:Name="radSemEnumeracao"
                                    Grid.Column="0" Grid.Row="0"
                                    Margin="0,5,0,8"
                                    IsChecked="True">
                                    Sem enumeração
                                </RadioButton>
                                <RadioButton
                                    x:Name="radId"
                                    Grid.Column="0" Grid.Row="1"
                                    Margin="0,0,0,10">
                                    ID do Objeto
                                </RadioButton>
                                <RadioButton
                                    x:Name="radAuto"
                                    Grid.Column="0" Grid.Row="2"
                                    Margin="0,0,0,2" Checked="radAuto_Checked">
                                    Enum. Sequencial
                                </RadioButton>
                                <StackPanel  Grid.Column="0" Grid.Row="3"
                                             Orientation="Horizontal"
                                             HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0"
                                            Margin="17,2,5,0"
                                            Text="Início:"
                                            FontSize="12" FontWeight="Bold"
                                            HorizontalAlignment="Left"
                                         >
                                        </TextBlock>
                                        <TextBox Grid.Column="0" Grid.Row="1"
                                             Margin="17,2,5,0"
                                             Width="30"
                                             x:Name="txtInicioEnum"
                                             Text="0"
                                             HorizontalAlignment="Left"
                                             HorizontalContentAlignment="Center"
                                             VerticalAlignment="Center" GotFocus="txtInicioEnum_GotFocus" LostFocus="txtInicioEnum_LostFocus"
                                         />

                                        <TextBlock  Grid.Column="1" Grid.Row="0"
                                            Margin="15,0,5,0"
                                            Text="Passo:"
                                            FontSize="12" FontWeight="Bold"
                                            HorizontalAlignment="Left"
                                         >
                                        </TextBlock>
                                        <TextBox  Grid.Column="1" Grid.Row="1"
                                             Margin="15,2,5,0"
                                             Width="30"
                                             x:Name="txtPassoEnum"
                                             Text="0"
                                             HorizontalAlignment="Left"
                                             HorizontalContentAlignment="Center"
                                             VerticalAlignment="Center" GotFocus="txtPassoEnum_GotFocus" LostFocus="txtPassoEnum_LostFocus"
                                         />
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </StackPanel>
                        <!-- Fim Coluna 2 -->
                    </Grid>
                </StackPanel>
                <!-- Fim Linha 1 -->

                <!-- Inicio Linha 2  ESPACE -->
                <StackPanel Grid.Column="0" Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,5,0,5"
                    >
                </StackPanel>
                <!-- Inicio Linha 2 -->

                <!-- Inicio Linha 3 UNDERSCORE / HIFEN / SAPCE-->
                <StackPanel Grid.Column="0" Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Margin="0,5,0,0"
                >
                    <RadioButton
                        x:Name="radUnderscore"
                        Margin="0,0,0,0"
                        IsChecked="True">
                        Undescore '__'
                    </RadioButton>
                    <RadioButton
                        x:Name="radHifen"
                        Margin="15,0,0,0">
                        Hifen '-'
                    </RadioButton>
                    <RadioButton
                        x:Name="radSpace"
                        Margin="15,0,0,0">
                        Space ' '
                    </RadioButton>
                </StackPanel>
                <!-- Fim Linha 3 -->

                <!-- Inicio Linha 4  APPLY BUTTON-->
                <StackPanel Grid.Column="0" Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,5,0,0"
                    >
                    <Button
                        x:Name="btnRenameShapes"
                        Content="Apply Name"
                        ToolTip="Apply parameters to name selection shapes"
                        Width="247" Height="25"
                        Margin="0,3,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="btnRenameShapes_Click"
                    />
                </StackPanel>
                <!-- Inicio Linha 4 -->
            </Grid>

        </StackPanel>

    </Grid>
</Page>
